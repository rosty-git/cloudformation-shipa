  "definitions": {
    "NetworkPolicyRule": {
      "type": "object",
      "properties": {
        "ID": {
          "type": "string"
        },
        "Enabled": {
          "type": "boolean"
        },
        "Description": {
          "type": "string"
        },
        "AllowedFrameworks": {
          "type": "array",
          "insertionOrder": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "NetworkPolicyConfig": {
      "type": "object",
      "properties": {
        "PolicyMode": {
          "type": "string"
        },
