            "$ref": "#/definitions/NetworkPolicyRule"
          }
        },
        "ShipaRules": {
          "type": "array",
          "insertionOrder": true,
          "items": {
            "$ref": "#/definitions/NetworkPolicyRule"
          }
        },
        "ShipaRulesEnabled": {
          "type": "array",
          "insertionOrder": true,
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
