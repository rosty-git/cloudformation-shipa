    },
    "Egress": {
      "$ref": "#/definitions/NetworkPolicyConfig"
    },
    "RestartApp": {
      "description": "Application restart flag",
      "type": "boolean"
    },
    "ShipaHost": {
      "description": "Shipa server host",
      "type": "string"
    },
    "ShipaToken": {
      "description": "Shipa access token",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "createOnlyProperties": [
    "/properties/App"
  ],
  "primaryIdentifier": [
    "/properties/App"
  ],
  "required": [
